{
  "$schema": "http://json.schemastore.org/template",
  "author": "Dmitrij Savickij",
  "classifications": [ "Unicorn microservice" ],
  "identity": "unicorn.templates.service",
  "name": "Unicorn microservice template",
  "shortName": "unicorn",
  "defaultName": "UnicornMicroservice",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "Unicorn.Templates.Service",
  "description": "A project template for creation of the Unicorn microservice",
  "preferNameDirectory": true,
  "guids": [
    "82FF2690-FAC1-4D43-9288-FAEE63E18107",
    "0BE59188-E6B8-4EE5-B14C-B3872B4E024C"
  ],
  "primaryOutputs": [
    { "path": "Unicorn.Templates.Service.sln" }
  ],
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!ReadMe)",
          "exclude": [
            "README.md"
          ]
        },
        {
          "condition": "(!License)",
          "exclude": [
            "LICENSE.md"
          ]
        },
        {
          "condition": "(!GitIgnore)",
          "exclude": [
            ".gitignore",
            ".gitattributes"
          ]
        },
        {
          "condition": "(!Docker)",
          "exclude": [
            "src/Content/src/Dockerfile",
            "src/Content/src/.dockerignore",
            "src/Content/src/dockercompose.yml"
          ]
        }
      ]
    }
  ],
  "symbols": {
	"Service name": {
	  "type": "parameter",
      "datatype": "string",
      "defaultValue": "MyUnicorn",
      "description": "The name of your service for HTTP and gRPC requests",
	  "fileRename": "YOUR_SERVICE_NAME",
	  "replaces": "YOUR_SERVICE_NAME",
	},
    "ReadMe": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include a Read Me file (ReadMe.md) in the solution."
    },
    "License": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include an MIT License file (License.md) in the solution."
    },
    "GitIgnore": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include a Git Ignore files (.gitignore & .gitattributes) in the solution."
    }
  }
}